<div class="container">
  <div class="row">
    <div class="mx-auto">
    
    <h2>Editing Book</h2>

    <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

    <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    
    <label for="inputtitle">Title</label>
    <p><%= f.text_field :title, autofocus: true, id:"inputtitle" %></p>

    <label for="inputbody">Opinion</label>
    <p><%= f.text_area :body, autofocus: true, id:"inputbody" %></p>

    <%= f.submit :'Update Book', class: "btn btn-success" %>

    <br><%= link_to "Show", book_path(@book.id) %> | 
    <%= link_to "Back", '/books' %>

    <% end %>
    
    </div>
  </div>
</div>
  